<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_leave_muti_choose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fkjslee.schoolv3.counsellor.LeaveMutiChoose">

    <android.support.v7.widget.Toolbar
        android:id="@+id/leave_muti_toolbars"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/leave_muti_backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="0.65"
                android:scaleX="0.65"
                android:paddingLeft="@dimen/small_margin"
                android:paddingRight="@dimen/small_margin"
                android:src="@drawable/backspace"/>

            <TextView
                android:id="@+id/leave_muti_choose_all"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/small_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/chooseAll"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/leave_muti_list"
        android:layout_below="@+id/leave_muti_toolbars"
        android:layout_above="@+id/leave_muti_taskbars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/leave_muti_taskbars"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/leave_muti_pass"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/pass"/>

            <ImageView
                android:id="@+id/leave_muti_reject"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/reject"/>

            <ImageView
                android:id="@+id/leave_muti_delete"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/delete"/>
        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

</RelativeLayout>
