<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_course_sign"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fkjslee.schoolv3.teacher.CourseSignActivity"
    tools:showIn="@layout/activity_course_sign">

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据库系统"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="25sp"
        android:id="@+id/course_sign_coursename"
        android:layout_gravity="left" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/course_sign_gridLayout1">
        <ImageView
            android:id="@+id/course_sign_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:src="@drawable/backspace"
            android:layout_row="0"
            android:layout_column="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教室 A8202"
            android:id="@+id/course_sign_classroom"
            android:layout_row="0"
            android:layout_column="1"/>
        <ImageView
            android:id="@+id/course_sign_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:src="@drawable/backspace"
            android:layout_row="1"
            android:layout_column="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周三3-4节"
            android:id="@+id/course_sign_week"
            android:layout_row="1"
            android:layout_column="1"/>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/course_sign_gridLayout2">

        <ImageView
            android:id="@+id/course_sign_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:src="@drawable/backspace"
            android:layout_row="0"
            android:layout_column="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假1人"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="20sp"
            android:id="@+id/course_sign_leavenum" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/course_sign_gridLayout3">
        <ImageView
            android:id="@+id/course_sign_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:src="@drawable/backspace"
            android:layout_row="0"
            android:layout_column="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到32人"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/course_sign_signnum" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/course_sign_gridLayout4">

        <ImageView
            android:id="@+id/course_sign_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:src="@drawable/backspace"
            android:layout_row="0"
            android:layout_column="0"/>
        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缺勤2人"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="20sp"
            android:id="@+id/course_sign_absentnum" />

    </GridLayout>
</LinearLayout>
