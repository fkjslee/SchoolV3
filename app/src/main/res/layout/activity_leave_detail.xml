<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_leave_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a6"
    tools:context="com.fkjslee.schoolv3.student.activity.LeaveDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/iv_rtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.65"
            android:scaleX="0.65"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:src="@drawable/backspace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/leave_detail"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/reason"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/imageView13" />
        <TextView
            android:text="@string/leave_reason"
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/textView24"
            android:layout_row="0"
            android:layout_column="1" />
        <TextView
            android:text=""
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size"
            android:id="@+id/tv_leave_reason"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/reason"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/imageView14" />
        <TextView
            android:text="@string/leave_request_time"
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/textView25"
            android:layout_row="1"
            android:layout_column="1" />
        <TextView
            android:text=""
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_request_time"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/starttime"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/imageView15" />
        <TextView
            android:text="@string/leave_start_time"
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/textView26"
            android:layout_row="2"
            android:layout_column="1" />
        <TextView
            android:text=""
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_start_time"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/endtime"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/imageView16" />
        <TextView
            android:text="@string/leave_end_time"
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/textView27"
            android:layout_row="3"
            android:layout_column="1" />
        <TextView
            android:text=""
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_end_time"
            android:layout_row="3"
            android:layout_column="2" />

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/reason"
            android:layout_row="4"
            android:layout_column="0"
            android:id="@+id/imageView17" />
        <TextView
            android:text="@string/result"
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/textView28"
            android:layout_row="4"
            android:layout_column="1" />
        <TextView
            android:text=""
            android:textSize="@dimen/detail_font_size"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/leave_agree_detail"
            android:id="@+id/tv_result"
            android:layout_row="4"
            android:layout_column="2" />
    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/know"
        android:id="@+id/btn_know"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/btn_azure"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp" />

</RelativeLayout>
