<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_complete_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bclog"
    tools:context="com.fkjslee.schoolv3.student.activity.CompleteMsgActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/complete_msg"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_rtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.65"
            android:scaleX="0.65"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:src="@drawable/backspace"/>
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/btn_submit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/btn_azure"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="170dp" />

    <GridLayout
        android:id="@+id/gl_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/rl_top"
        android:layout_alignLeft="@+id/btn_submit"
        android:layout_alignStart="@+id/btn_submit">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/sid"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/imageView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stu_ID"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:inputType="textPersonName"
            android:hint="@string/plz_input_stu_ID"
            android:ems="10"
            android:id="@+id/et_stu_ID"
            android:layout_row="1"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/sid"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/imageView13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/real_name"
            android:id="@+id/textView13"
            android:layout_row="3"
            android:layout_column="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:inputType="text"
            android:hint="@string/real_name_function"
            android:ems="10"
            android:id="@+id/et_realName"
            android:layout_row="3"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/sid"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/imageView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pwd"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:inputType="textPassword"
            android:hint="@string/plz_input_pwd"
            android:ems="10"
            android:id="@+id/et_pwd"
            android:layout_row="2"
            android:layout_column="2"/>
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/sid"
            android:layout_row="4"
            android:layout_column="0"
            android:id="@+id/imageView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/academy"
            android:id="@+id/textView14"
            android:layout_row="4"
            android:layout_column="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_font_size"
            android:inputType="text"
            android:hint="@string/plz_input_pwd"
            android:ems="10"
            android:id="@+id/et_academy"
            android:layout_row="4"
            android:layout_column="2"/>
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_photo"
        android:id="@+id/btn_uploadPhoto"
        android:textSize="15sp"
        android:background="@drawable/btn_azure"
        android:layout_alignTop="@+id/gl_data"
        android:layout_alignRight="@+id/btn_submit"
        android:layout_alignEnd="@+id/btn_submit"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="33dp" />



</RelativeLayout>
